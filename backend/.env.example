# 服务器配置
PORT=3001
NODE_ENV=development

# MongoDB配置
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/class-notebook?retryWrites=true&w=majority

# Azure配置
# Azure Speech Services (语音转文字)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_speech_region

# Azure Document Intelligence (OCR)
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_document_key
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=your_azure_document_endpoint

# Azure OpenAI (智能问答)
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Azure Storage (未来可选)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string

# 应用配置
FRONTEND_URL=http://localhost:3000